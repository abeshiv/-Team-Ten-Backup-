@model IEnumerable<miVacationSurfer.ActivityType>

@{
    ViewBag.Title = "ActivityType";
}

<h2>Activity Type</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Activity Type", "Index", new { sortOrder =ViewBag.TypeSortParm})
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityTypeDesc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
